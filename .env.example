# Environment Configuration Template
# Copy this file to .env and customize values for your deployment

# Application Settings
NODE_ENV=development
WEBAPP_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# Database Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_DB=sitetemplate
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_password_change_me
REDIS_PORT=6379

# Authentication (Auth0)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret
AUTH0_CALLBACK_URL=http://localhost:3000/callback

# Security Keys (Generate strong secrets for production)
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
SESSION_SECRET=your_session_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_aes_256_encryption_key_32_chars

# External API Configuration (Stage 3)
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_CLIENT_ID=your_api_client_id
EXTERNAL_API_CLIENT_SECRET=your_api_client_secret

# Feature Toggles (Stage 4)
ENABLE_ANALYTICS=false
ENABLE_ADMIN_DASHBOARD=false
ENABLE_REALTIME_FEATURES=false

# Monitoring (Stage 5)
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Theme Configuration (Stage 4)
DEFAULT_THEME=default
BRAND_PROFILE=generic